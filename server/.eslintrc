{
  "extends": ["airbnb-base", "prettier"],
  "parser": "babel-eslint",
  "env": {
    "mocha": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "import/no-named-as-default": 0
  },
  "settings": {
    "import/resolver": {
      "node": {},
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
